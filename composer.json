{
    "name": "nawasara/core",
    "description": "Core package for Nawasara superapp (theme, components, helpers, user management)",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nawasara\\Core\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Nawasara\\Core\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^12.0",
        "spatie/laravel-permission": "^6.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nawasara\\Core\\CoreServiceProvider"
            ]
        }
    }
}
